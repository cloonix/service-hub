FROM python:3.13-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache gcc musl-dev

# Copy requirements (base + MCP)
COPY requirements.txt requirements-mcp.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt -r requirements-mcp.txt

# Copy MCP server code
COPY mcp_server/ ./mcp_server/
COPY lib/ ./lib/

# Expose MCP server port
EXPOSE 8001

# Run MCP server with uvicorn
CMD ["uvicorn", "mcp_server.server:app", "--host", "0.0.0.0", "--port", "8001"]
