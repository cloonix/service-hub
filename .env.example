# API Configuration
API_TITLE=YouTube Transcript API
API_VERSION=1.0.0
API_DESCRIPTION=FastAPI backend providing YouTube transcripts and future tools
DEBUG=False
ENVIRONMENT=development
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# CORS Configuration
# JSON array format - use ["*"] for all origins or ["http://localhost:3000","https://app.example.com"]
ALLOWED_ORIGINS=["*"]

# Database
DATABASE_URL=sqlite:///./data/myapi.db

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100
CACHE_DIR=/app/cache

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=100
DEFAULT_RATE_WINDOW=60

# Tier-specific rate limits (requests per minute)
TIER_FREE_RATE_LIMIT=100
TIER_PREMIUM_RATE_LIMIT=1000
TIER_ADMIN_RATE_LIMIT=10000
TIER_RATE_WINDOW=60

# Security
# MASTER_API_KEY: Special bypass key for development/admin access
#   - Bypasses database lookup and rate limiting
#   - Has admin-tier permissions
#   - IMPORTANT: Keep this secret in production!
#   - Leave empty to disable master key bypass
# Generate database API keys with: python scripts/manage_keys.py create admin --tier admin
MASTER_API_KEY=dev-master-key-change-in-production
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Request Size Limits
# Maximum request body size in bytes (default: 1MB)
MAX_REQUEST_SIZE=1000000

# YouTube Settings (Optional)
# YOUTUBE_COOKIES=/path/to/cookies.txt
# YOUTUBE_PROXY_HTTP=http://proxy:port
# YOUTUBE_PROXY_HTTPS=https://proxy:port

# MCP Server Settings
# Note: MCP server now uses the YouTube library directly (no API key needed for FastAPI)
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8001
