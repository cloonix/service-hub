# API Configuration
API_TITLE=YouTube Transcript API
API_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./myapi.db

# Cache Settings
CACHE_ENABLED=True
CACHE_TTL=3600
CACHE_MAX_SIZE=100
CACHE_DIR=./cache

# Rate Limiting
RATE_LIMIT_ENABLED=True
DEFAULT_RATE_LIMIT=100
DEFAULT_RATE_WINDOW=60

# Security
# Generate admin key with: python scripts/manage_keys.py create admin --tier admin
ADMIN_API_KEY=
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# YouTube Settings (Optional)
# YOUTUBE_COOKIES=/path/to/cookies.txt
# YOUTUBE_PROXY_HTTP=http://proxy:port
# YOUTUBE_PROXY_HTTPS=https://proxy:port
